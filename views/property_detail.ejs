<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/path/to/favicon.ico">
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/main.css" rel="stylesheet" />
    <title>MK Property</title>
</head>

<body>

    <!-- HEADER -->

    <%- include('header') %>

        <section class="py-5">
            <div class="container px-4 px-lg-5">
                <div class="row-cols-1 input-group-text">
                    <h1>
                        <%= item.real_estate_name %>
                    </h1>
                </div>
            </div>
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col mb-5">
                        <div class="card2 h-100">
                            <div class="slideshow-container">
                                <div class="mySlides fade"><img src="/property/<%= item.image_01 %>" alt=""></div>
                                <div class="mySlides fade"><img src="/property/<%= item.image_02 %>" alt=""></div>
                                <div class="mySlides fade"><img src="/property/<%= item.image_03 %>" alt=""></div>
                                <div class="mySlides fade"><img src="/property/<%= item.image_04 %>" alt=""></div>
                                <div class="mySlides fade"><img src="/property/<%= item.image_05 %>" alt=""></div>
                            </div>

                            <div class="text-align: center;">
                                <div class="dot" onclick="currentSlide(1)">
                                    <span> <img src="/property/<%= item.image_01 %>" alt=""> </span> </div>
                                <div class="dot" onclick="currentSlide(2)">
                                    <span> <img src="/property/<%= item.image_02 %>" alt=""> </span> </div>
                                <div class="dot" onclick="currentSlide(3)">
                                    <span> <img src="/property/<%= item.image_03 %>" alt="">  </span> </div>
                                <div class="dot" onclick="currentSlide(4)">
                                    <span> <img src="/property/<%= item.image_04 %>" alt="">  </span> </div>
                                <div class="dot" onclick="currentSlide(5)">
                                    <span> <img src="/property/<%= item.image_05 %>" alt="">  </span> </div>
                            </div>

                            <p>id :
                                <%= item.id%>
                            </p>
                            <p>real_estate_name :
                                <%= item.real_estate_name%>
                            </p>
                            <p>lat :
                                <%= item.lat %>
                            </p>
                            <p>lon :
                                <%= item.lon %>
                            </p>
                            <p>LOCATION :
                                <%= item.LOCATION%>
                            </p>
                            <p>property_type :
                                <%= item.property_type%>
                            </p>
                            <p>TRANSACTION :
                                <%= item.TRANSACTION%>
                            </p>
                            <p>SALE_TERMS :
                                <%= item.SALE_TERMS%>
                            </p>
                            <p>SALE_TERMS :
                                <%= item.SALE_TERMS%>
                            </p>
                            <p>SALE_PRICE :
                                <%= item.SALE_PRICE%>
                            </p>
                            <p>RENT_PRICE :
                                <%= item.RENT_PRICE%>
                            </p>
                            <p>COMMON_CHARGES :
                                <%= item.COMMON_CHARGES%>
                            </p>
                            <p>DECORATION_STYLE :
                                <%= item.DECORATION_STYLE%>
                            </p>
                            <p>BEDROOMS :
                                <%= item.BEDROOMS%>
                            </p>
                            <p>BATHROOMS :
                                <%= item.BATHROOMS%>
                            </p>
                            <p>DIRECTION_OF_ROOM :
                                <%= item.DIRECTION_OF_ROOM%>
                            </p>
                            <p>UNIT_SIZE :
                                <%= item.UNIT_SIZEid%>
                            </p>
                            <p>LAND_AREA :
                                <%= item.LAND_AREA%>
                            </p>
                            <p>INROOM_FACILITIES :
                                <%= item.INROOM_FACILITIES%>
                            </p>
                            <p>PUBLIC_FACILITIES :
                                <%= item.PUBLIC_FACILITIES%>
                            </p>
                        </div>

                    </div>
                </div>
        </section>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                let slideIndex = 1;
                showSlides(slideIndex);

                // เมื่อคลิกภาพขนาดเล็ก (thumbnail)
                window.currentSlide = function(n) {
                    slideIndex = n;
                    showSlides(slideIndex);
                };

                // ฟังก์ชันโชว์ภาพ
                function showSlides(n) {
                    const slides = document.getElementsByClassName("mySlides");
                    if (slides.length === 0) return;

                    if (n > slides.length) slideIndex = 1;
                    if (n < 1) slideIndex = slides.length;

                    // ซ่อนทุกรูปก่อน
                    for (let i = 0; i < slides.length; i++) {
                        slides[i].style.display = "none";
                    }

                    // โชว์รูปที่เลือก
                    slides[slideIndex - 1].style.display = "block";
                    slides[slideIndex - 1].classList.add("show");

                }
            });
        </script>
</body>

</html>